<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateEventActivity"
    android:background="@color/darkblue"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/backButtonCreateEvent"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/setTitleEvent"
        android:layout_width="323dp"
        android:layout_height="42dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="143dp"
        app:layout_constraintTop_toBottomOf="@+id/backButtonCreateEvent" />

    <EditText
        android:id="@+id/setDescriptionEvent"
        android:layout_width="323dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setTitleEvent"
        app:layout_constraintEnd_toEndOf="@id/setTitleEvent" />

    <Spinner
        android:id="@+id/spinnerEventCategory"
        android:layout_width="323dp"
        android:layout_height="42dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blueCatSalud"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@id/setDescriptionEvent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setDescriptionEvent" />


    <EditText
        android:id="@+id/selectRangeDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="40dp"
        android:inputType="textPersonName"
        android:text="Select Event duration:"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="287dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerEventCategory"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/dateRangeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rangeDatePickBtn" />

    <Button
        android:id="@+id/rangeDatePickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="5dp"
        android:text="Select Dates"
        android:backgroundTint="@color/blueCatSalud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectRangeDateTxt"
        />

    <Button
        android:id="@+id/createEventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blueCatSalud"
        android:text="CREATE EVENT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateRangeTxt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>